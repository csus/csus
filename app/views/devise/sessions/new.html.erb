<div class="row">

  <div class="col-md-3">
  </div>

        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6">
          <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px">
                  <%- if devise_mapping.recoverable? %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
                  <% end %>
                </div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
              <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">
                <%= devise_error_messages! %>
              </div>

              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
              <div style="margin-bottom: 25px" class="input-group">

                  <span class="input-group-addon"> @ </span>
                  <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
              </div>
              <div style="margin-bottom: 25px" class="input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                  <%= f.password_field :password, class: 'form-control' %>
              </div>

              <div class="input-group">
                <% if devise_mapping.rememberable? %>
                  <div class="checkbox" style="margin-bottom: 0 !important;">
                    <label>
                      <%= f.check_box :remember_me %> Remember me
                    </label>
                  </div>
                <% end %>
              </div>

              <div style="margin-top:10px" class="form-group">
                  <div class="col-sm-12 controls" style="padding-left: 0 !important;">
                    <%= f.submit 'Sign in', :class => 'btn btn-success' %>
                  </div>
              </div>

              <div class="form-group">
                  <div class="col-md-12 control" style="padding-left: 0 !important; padding-top:15px;">
                      <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                          Don't have an account!
                          <% if devise_mapping.registerable? %>
                            <%= link_to 'Sign up', new_registration_path(resource_name)  %>
                          <% end %>
                      </div>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
      </div>
</div>
