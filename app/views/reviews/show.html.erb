<p id="notice"><%= notice %></p>

<table class="table table-bordered">
  <% @review.attributes.each do |attribute_name, attribute_value| %>
    <% if attribute_name == 'star_rating' %>
      <tr>
        <td><%= attribute_name %></td>
        <td class="star-rating" data-score="<%= attribute_value %>"><%= attribute_value %></td>
      </tr>
    <% else %>
    <tr>
      <td><%= attribute_name %></td>
      <td><%= attribute_value %></td>
    </tr>
    <% end %>

  <% end %>
</table>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>
<script>
  $('.star-rating').raty({
    readOnly: true,
    score: function() {
          return $(this).attr('data-score');
    },
    path: '/assets/'
});
</script>
